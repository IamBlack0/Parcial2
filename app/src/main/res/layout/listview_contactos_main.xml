<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="#E0EAF4">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/ImagenPerfil"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/elpatron"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_shape"
        android:clipToOutline="true" />

    <!-- Username -->
    <TextView
        android:id="@+id/nombreEnChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ImagenPerfil"
        android:layout_marginStart="8dp"
        android:layout_alignParentTop="true"
        android:text="Patron Murcia"
        android:textSize="16sp"
        android:textColor="#424F63"
        android:fontFamily="sans-serif-medium" />

    <!-- Timestamp -->
    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/nombreEnChat"
        android:text="Friday"
        android:textSize="14sp"
        android:textColor="#888888" />

    <!-- Message -->
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ImagenPerfil"
        android:layout_below="@id/nombreEnChat"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Pero ofi sino ya sera hablar el viernes con el"
        android:textSize="14sp"
        android:textColor="#888888" />
</RelativeLayout>
